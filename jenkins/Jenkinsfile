pipeline {
    agent any
    
    environment {
        PROJECT_NAME = 'petals-pages'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'âœ… Checking out code from Git'
                checkout scm
            }
        }
        
        stage('Build Services') {
            steps {
                echo 'ğŸ”¨ Building all services with Docker Compose'
                sh 'docker-compose build'
            }
        }
        
        stage('Test Services') {
            steps {
                echo 'ğŸ§ª Testing services'
                sh '''
                    echo "Testing Product Service..."
                    docker run --rm petals-and-pages-product-service python -c "print('Product Service OK')"
                    
                    echo "Testing Order Service..."  
                    docker run --rm petals-and-pages-order-service node -e "console.log('Order Service OK')"
                    
                    echo "Testing User Service..."
                    docker run --rm petals-and-pages-user-service python -c "print('User Service OK')"
                '''
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'ğŸš€ Deploying with Docker Compose'
                sh 'docker-compose up -d'
            }
        }
        
        stage('Verify') {
            steps {
                echo 'ğŸ” Verifying deployment'
                sh 'docker-compose ps'
                sh 'sleep 10'
                sh 'curl -f http://localhost:5001/health || exit 1'
                sh 'curl -f http://localhost:5002/health || exit 1'
                sh 'curl -f http://localhost:5003/health || exit 1'
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Pipeline completed successfully!'
            echo 'ğŸŒ¸ğŸ“š Petals & Pages is deployed at http://localhost:3000'
        }
        failure {
            echo 'âŒ Pipeline failed!'
        }
    }
}